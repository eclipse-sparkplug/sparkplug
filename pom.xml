<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.eclipse.sparkplug</groupId>
    <artifactId>sparkplug-parent</artifactId>
    <version>3.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Sparkplug ${project.version} Parent</name>
    <url>https://sparkplug.eclipse.org//</url>

    <organization>
        <name>Eclipse Sparkplug</name>
        <url>https://sparkplug.eclipse.org/</url>
    </organization>

    <issueManagement>
        <system>github</system>
        <url>https://github.com/eclipse/sparkplug/issues</url>
    </issueManagement>

<!-- TBD
    <distributionManagement>
        <snapshotRepository>
        </snapshotRepository>
        <repository>
        </repository>
    </distributionManagement>
-->

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.deploy.skip>true</maven.deploy.skip>
        <main.basedir>${project.basedir}</main.basedir>
        <jboss.test.audit.version>1.1.4.Final</jboss.test.audit.version>
        <jakarta.annotation.version>2.0.0</jakarta.annotation.version>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
    </properties>

    <modules>
      <module>specification</module>
      <module>tck</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.7.0</version>
                <configuration>
                    <source>11</source>
                    <target>11</target>
                    <encoding>UTF-8</encoding>
                    <compilerArgument>-proc:none</compilerArgument>
                    <compilerArgument>-parameters</compilerArgument>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
